{
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "target": "es2017",
    "moduleResolution": "node",
    "module": "CommonJS",
    "lib": ["es2017", "esnext.asynciterable"],
    "outDir": "build",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true
  }
}
